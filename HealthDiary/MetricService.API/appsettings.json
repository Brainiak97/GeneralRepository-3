{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=MetricServiceDb;Username=postgres;Include Error Detail=True"
  },

  "Validate": {
    "User": {
      "Height": {
        "Min": 50,
        "Max": 250
      },
      "Weight": {
        "Min": 0,
        "Max": 400
      },

      "Age": {
        "Min": 5,
        "Max": 130
      }
    },
    "Sleep": {
      "QualityRating": {
        "Min": 1,
        "Max": 5
      }
    },
    "PhysicalActivity": {
      "Name": {
        "Max": 150
      }
    }
  }
}
